{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "Enterprise API Gateway with advanced routing, authentication, rate limiting, and monitoring",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
